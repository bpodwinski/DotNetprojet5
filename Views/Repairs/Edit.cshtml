@model ExpressVoitures.Models.Repair

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-5">Edit</h1>

<div class="row">
    <div class="col-lg-6 mx-auto p-4 rounded bg-white shadow-lg">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cost" class="form-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>

            <div class="mb-3 d-none">
                <label asp-for="VehicleId" class="form-label"></label>
                <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId" disabled></select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="mt-5 form-group d-flex flex-row justify-content-between form-group text-center">
                <a asp-action="Index" asp-route-vehicleId="@Model.VehicleId" class="btn btn-outline-secondary">Retour</a>
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
