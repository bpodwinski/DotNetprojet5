@model ExpressVoituresV2.Models.Vehicle

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-5">Détail du véhicule</h1>

<div class="row">
	<div class="col-md-8 mx-auto mt-5 p-5 rounded bg-white shadow">
		<dl class="row">
			<dt class="col-sm-4">
				@Html.DisplayNameFor(model => model.Vin)
			</dt>
			<dd class="col-sm-8">
				@Html.DisplayFor(model => model.Vin)
			</dd>
			<dt class="col-sm-4">
				@Html.DisplayNameFor(model => model.Year)
			</dt>
			<dd class="col-sm-8">
				@Html.DisplayFor(model => model.Year)
			</dd>
			<dt class="col-sm-4">
				@Html.DisplayNameFor(model => model.Brand)
			</dt>
			<dd class="col-sm-8">
				@Html.DisplayFor(model => model.Brand.Name)
			</dd>
			<dt class="col-sm-4">
				@Html.DisplayNameFor(model => model.PurchaseDate)
			</dt>
			<dd class="col-sm-8">
				@Html.DisplayFor(model => model.PurchaseDate)
			</dd>
			<dt class="col-sm-4">
				@Html.DisplayNameFor(model => model.PurchasePrice)
			</dt>
			<dd class="col-sm-8">
				@Html.DisplayFor(model => model.PurchasePrice)
			</dd>
			<dt class="col-sm-4">
				@Html.DisplayNameFor(model => model.AvailabilityDate)
			</dt>
			<dd class="col-sm-8">
				@Html.DisplayFor(model => model.AvailabilityDate)
			</dd>
			<dt class="col-sm-4">
				@Html.DisplayNameFor(model => model.SalePrice)
			</dt>
			<dd class="col-sm-8">
				@Html.DisplayFor(model => model.SalePrice)
			</dd>
			<dt class="col-sm-4">
				@Html.DisplayNameFor(model => model.SaleDate)
			</dt>
			<dd class="col-sm-8">
				@Html.DisplayFor(model => model.SaleDate)
			</dd>
		</dl>
		
		<div class="mt-5 form-group d-flex flex-row justify-content-between form-group text-center">
			<a asp-action="Index" class="btn btn-outline-secondary">Retour</a>
			<a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editer</a>
		</div>
	</div>
</div>
